{
  "manifest_version": 3,
  "name": "迈瑞药材集采小工具",
  "description": "迈瑞药材集采小工具",
  "version": "1.0",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_icon": "images/icon.png",
    "default_title": "迈瑞药材集采小工具"
  },
  "content_scripts": [
    {
      "matches": ["*://igi.hsa.gd.gov.cn/*"],
      "css": ["content/index.css"],
      "js": ["content/index.js", "utils/home.js", "utils/xlsx.full.min.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/icon.ico", "utils/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting", "activeTab", "notifications", "tabs", "webRequest", "webRequestAuthProvider"]
}